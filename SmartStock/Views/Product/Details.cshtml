@model SmartStock.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3>Product Details</h3>
        </div>
        <div class="card-body">
            <h4 class="card-title">@Model.Name</h4>
            <p><strong>Category:</strong> @Model.Category</p>
            <p><strong>Price:</strong> @Model.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</p>
            <p><strong>Quantity:</strong> @Model.Quantity</p>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary ms-2">Edit</a>
        </div>
    </div>
</div>
